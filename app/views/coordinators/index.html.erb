<div class="wrapper">
  <%= render 'shared/header' %>
  <div class="row area-grid text-center">
    <div class="row">
        <div class="small-12 columns text-center info-text">
            Coordenadores
            <div class="subtext">Lista de Coordenadores</div>
        </div>
    </div>
    
    <div class="row">
      <%= form_tag '', :method => :get do  %>
        <div class="columns medium-3 float-left">
          <label>Nome
            <%= text_field_tag :coordinator_name, @search[:name] %>
          </label>
        </div>
        <div class="columns medium-2 float-left">
          <label>Username
             <%= text_field_tag :coordinator_username, @search[:username] %>
          </label>
        </div>
         <div class="columns medium-2 float-left">
          <label>Curso
            <%= select_tag :coordinator_course, options_from_collection_for_select(@courses, "id", "name", @search[:course]), include_blank: true  %>
          </label>
        </div>
        <div class="columns medium-2 float-left">
          <div class='medium-2 columns'>
            <%=submit_tag("Pesquisar", name: 'search', class: 'button')%>
          </div>
        </div>
      <% end %>
        <div class="columns large-3 float-left">
          <div class='medium-12 columns'>
            <%= link_to "Novo Coordenador", new_coordinator_path, :class=>"button export-button" %>
          </div>
        </div>
    </div>
    
    <table id="largeTable" class="schedule-table large-table unstriped">
      <thead> 
        <tr>
          <th width="100">Nome</th>
          <th width="60">Usuário</th>
          <th width="130">Curso</th>
          <th width="30"></th>
          <th width="30"></th>
        </tr>
      </thead>
      <tbody>
          <% @coordinators.each do |coordinator| %>
            <tr>
              <td><%= coordinator.name %></td>
              <td><%= coordinator.username %></td>
              <td><%= coordinator.course.name %></td>
              <td><%= link_to 'Editar', edit_coordinator_path(coordinator) %></td>
              <td><%= link_to 'Apagar', coordinator, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
            </tr>
          <% end %>
      </tbody>
    </table>
    
    <div class="row">
      <span id="goToTop" class="go-to-top float-left">▲ Topo</span>
    </div>
  </div>
</div>


<%= render 'shared/footer' %>
<% content_for :script do %>
<script>
  mixpanel.track("Acessou página index coordenador");

   $("#goToTop").click(function() {
        $('html,body').animate({
            scrollTop: $("#header").offset().top
        }, 500);
    });
</script>
<% end %>


