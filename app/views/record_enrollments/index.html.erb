<div class="wrapper">
  <%= render 'shared/header' %>
  <div class="row area-grid text-center">
    <div class="row">
        <div class="small-12 columns text-center info-text">
            Pré-Matrículas
            <div class="subtext"> <%= @course.name %> </div>
        </div>
    </div>
<div data-turbolinks="false">
   <% if @pre_enrollments.any? %>
    <table id="largeTable" class="schedule-table large-table unstriped">
      <thead>
         <tr>
          <th width="40">Semestre</th>
          <th width="40">Aberto até</th>
          <th width="50"></th>
        </tr>
      </thead>
      <tbody>
        <% @pre_enrollments.each do |pre_enrollment| %>
          <tr>
            <td><%= pre_enrollment.semester %></td>
            <td><%= pre_enrollment.date_end_format %></td>
            <td><%= link_to 'Preencher Pré-Matricula', record_enrollments_new_path(pre_enrollment.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>
    
    <% if @record_enrollments.any? %>
    <table class="schedule-table large-table unstriped">
        <thead>
          <tr>
            <th width="40">Semestre</th>
            <th width="40"></th>
            <th width="50"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @record_enrollments.each do |record_enrollment| %>
            <tr>
              <td><%= record_enrollment.pre_enrollment.semester %></td>
              <% if record_enrollment.pre_enrollment.available %>
                <td><%= link_to 'Editar', record_enrollments_edit_path(:id => record_enrollment, :pre_enrollment_id => record_enrollment.pre_enrollment) %></td>
                <td><%= link_to 'Apagar', record_enrollment_path(:id => record_enrollment, :pre_enrollment_id => record_enrollment.pre_enrollment), method: :delete, data: { confirm: 'Você tem certeza?' }%></td>
              <% else %>
                <td>Fechado</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
</div>

    <div class="row">
      <span id="goToTop" class="go-to-top float-left">▲ Topo</span>
    </div>
    
  </div>
</div>
<%= render 'shared/footer' %>

<% content_for :script do %>
<script>
    $("#goToTop").click(function() {
          $('html,body').animate({
              scrollTop: $("#header").offset().top
          }, 500);
    });
</script>
<% end %>

