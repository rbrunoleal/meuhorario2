<div class="wrapper">
  <%= render 'shared/header' %>
  <div class="row area-grid text-center">
    <div class="row">
      <div class="small-12 columns text-center info-text">
          Alunos
          <div class="subtext">Alunos cadastrados para orientação acadêmica com <%= @professor.name %></div>
      </div>
    </div>
    
    <table id="largeTable" class="schedule-table large-table unstriped">
      <thead>
        <tr>
          <th width="180">Nome</th>
          <th width="60">Matrícula</th>
          <th width="80">E-mail</th>
          <th width="60"> Cadastro</th>
          <th width="60"></th>
          <th width="60"></th>
          <th width="30"></th>
          <th width="30"></th>
        </tr>
      </thead>
      <tbody>
          <% @orientation_result.each do |orientation| %>
            <tr>
              <td><%= orientation.name %></td>
              <td><%= orientation.matricula %></td>
              <td><%= orientation.email %></td>
              <td><%= orientation.record %></td>
              <% if orientation.planning.present? %>
                <td><%= link_to 'Planejamento', planning_orientation_path(:professor_id => params[:professor_id], :orientation_id => orientation.planning) %></td>
              <%else%>
                <td></td>
              <% end %>
              <% if orientation.historic.present? %>
                <td><%= link_to 'Histórico', historic_orientation_path(:professor_id => params[:professor_id], :orientation_id => orientation.historic) %></td>
              <%else%>
                <td></td>
              <% end %>
              <td><%= link_to 'Editar', edit_orientation_path(:professor_id => params[:professor_id], :course_id => params[:course_id], :orientation_id => orientation.id) %></td>
              <td><%= link_to 'Apagar', orientation_path(:professor_id => params[:professor_id], :course_id => params[:course_id], :orientation_id => orientation.id), method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
            </tr>
          <% end %>
      </tbody>
    </table>
    
    <div class="row">
      <span id="goToTop" class="go-to-top float-left">▲ Topo</span>
      <div class="columns small-4 large-4 float-right">
        <%= link_to "Adicionar via planilha", table_orientations_path, :class=>"button export-button float-right" %>  
        <%= link_to "Adicionar Aluno", new_orientation_path, :class=>"button export-button float-left" %>  
      </div>
    </div>
  </div>
</div>   

<%= render 'shared/footer' %>

<% content_for :script do %>
<script>
   mixpanel.track("Acessou pagina cadastro alunos da orientação");

    $("#goToTop").click(function() {
          $('html,body').animate({
              scrollTop: $("#header").offset().top
          }, 500);
    });
</script>
<% end %>