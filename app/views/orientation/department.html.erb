<div class="wrapper">
  <%= render 'shared/header' %>
  <div class="row area-grid text-center">
    <div class="row">
      <div class="small-12 columns text-center info-text">
          Cursos
          <div class="subtext"> <%= @department.name %> </div>
      </div>
    </div>
    
    <div class="row">
       <table id="largeTable" class="schedule-table large-table unstriped">
        <thead>
          <tr>
            <th width="200">Nome</th>
            <th width="30"></th>
          </tr>
        </thead>
        <tbody>
          <% @courses.each do |course| %>
            <tr>
              <td><%= course.name %></td>
              <td><%= link_to 'Alunos', orientations_path(:professor_id => @professor, :course_id =>  course) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="row">
      <span id="goToTop" class="go-to-top float-left">▲ Topo</span>
    </div>
  </div> 
</div>
<%= render 'shared/footer' %>

<% content_for :script do %>
<script>
    mixpanel.track("Acessou página orientação departamento");

    $("#goToTop").click(function() {
          $('html,body').animate({
              scrollTop: $("#header").offset().top
          }, 500);
    });
</script>
<% end %>
