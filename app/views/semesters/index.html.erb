<p id="notice"><%= notice %></p>

<h1>Semestre</h1>

<table>
  <thead>
    <tr>
      <th>Ano</th>
      <th>Semestre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @semesters.each do |semester| %>
      <tr>
        <td><%= semester.year %></td>
        <td><%= semester.period %></td>
        <td><%= link_to 'Editar', edit_semester_path(semester) %></td>
      </tr>
    <% end %>
  </tbody>
</table>




