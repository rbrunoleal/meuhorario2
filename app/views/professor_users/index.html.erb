<div class="wrapper">
  <%= render 'shared/header' %>
  <div class="row area-grid text-center">
    <div class="row">
        <div class="small-12 columns text-center info-text">
            Professores
            <div class="subtext"> <%= @department %> </div>
        </div>
    </div>
    
    <div class="row">
      <div class="float-right small-4 large-4 columns">
        <%= link_to "Adicionar via planilha", table_professors_path, :class=>"button export-button float-right" %>  
        <%= link_to "Adicionar Professor", new_professor_user_path, :class=>"button export-button float-left" %> 
      </div>
    </div>
    
    <table id="largeTable" class="schedule-table large-table unstriped">
      <thead>
        <tr>
          <th width="100"> Nome</th>
          <th width="80"> Usuário</th>
          <th width="30"></th>
          <th width="30"></th>
        </tr>
      </thead>
      <tbody>
          <% @professor_users.each do |professor_user| %>
            <tr>
              <td><%= professor_user.name %></td>
              <td><%= professor_user.username %></td>
              <td><%= link_to 'Editar', edit_professor_user_path(professor_user) %></td>
              <td><%= link_to 'Apagar', professor_user, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
            </tr>
          <% end %>
      </tbody>
    </table>
    
    <div class="row">
      <span id="goToTop" class="go-to-top float-left">▲ Topo</span>
    </div>
    
  </div>
</div>
<%= render 'shared/footer' %>

<% content_for :script do %>
<script>
    mixpanel.track("Acessou página index professor");
    
    $("#goToTop").click(function() {
          $('html,body').animate({
              scrollTop: $("#header").offset().top
          }, 500);
    });
</script>
<% end %>





