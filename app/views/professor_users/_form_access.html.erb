<%= form_for :professor_user, :url => professor_users_create_access_path do |f| %>
  <div class="row">
    <div class='large-4 columns'>
      <%= f.label :name, 'Nome' %>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="row">
     <div  class='large-4 columns'>
      <%= f.label :department_id, 'Departamento' %>
      <%= f.collection_select :department_id, Department.order(:name),:id,:name, include_blank: "Selecione" %>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <%= f.submit 'Salvar', class: 'button export-button float-right' %> 
    </div>  
  </div>
<% end %>
