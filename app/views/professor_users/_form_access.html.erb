<%= form_for :professor_user, :url => professor_users_create_access_path do |f| %>
  <% if professor_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(professor_user.errors.count, "erro") %>, não foi possível salvar os dados:</h2>

      <ul>
      <% professor_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :department_id, 'Departamento' %>
    <%= f.collection_select :department_id, Department.order(:name),:id,:name, include_blank: "Selecione" %>
  </div>

  <div class="actions">
    <%= f.submit "Salvar" %>
  </div>
<% end %>
