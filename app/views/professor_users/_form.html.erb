<%= form_for(professor_user) do |f| %>
  <div class="row">
    <div class='large-4 columns'>
      <%= f.label :name, 'Nome' %>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="row">
    <div class='large-4 columns'>
      <%= f.label :username %>
      <%= f.text_field :username %>       
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <%= f.submit 'Salvar', class: 'button export-button float-right' %> 
      <%= link_to "Voltar", professor_users_path, :class=>"button export-button float-left" %>
    </div>  
  </div>
<% end %>